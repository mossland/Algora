# ===========================================
# Algora Environment Configuration
# ===========================================

# Server Configuration
PORT=3201
NODE_ENV=development

# Database
DATABASE_PATH=./data/algora.db

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3200

# ===========================================
# Budget Configuration
# ===========================================
DAILY_BUDGET=5.00
TIER2_INTERVAL_HOURS=3

# ===========================================
# Local LLM Configuration (Tier 1)
# ===========================================
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=qwen2.5:32b

# ===========================================
# External LLM API Keys (Tier 2)
# ===========================================
# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ===========================================
# External Services
# ===========================================
# Reality Oracle - Data Collection
RSS_FEEDS=https://example.com/feed1,https://example.com/feed2
SOCIAL_API_KEYS=

# Blockchain Integration (MOC)
MOC_RPC_URL=
MOC_CONTRACT_ADDRESS=

# ===========================================
# Signal Collector API Keys (Optional)
# ===========================================
# GitHub API (for higher rate limits)
GITHUB_TOKEN=your_github_token_here

# CoinMarketCap (https://coinmarketcap.com/api/)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Etherscan (https://etherscan.io/apis)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# OpenSea NFT API (https://docs.opensea.io/reference/api-keys)
OPENSEA_API_KEY=your_opensea_api_key_here

# ===========================================
# Feature Flags
# ===========================================
ENABLE_AGENT_CHATTER=true
ENABLE_REALITY_ORACLE=true
ENABLE_PROOF_OF_OUTCOME=false
